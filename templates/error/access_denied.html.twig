{# templates/bundles/TwigBundle/Exception/error403.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Access Denied{% endblock %}

{% block body %}
<section class="min-h-screen flex items-center justify-center bg-zinc-50 px-6">
  <div class="text-center max-w-lg">
    <div class="text-7xl font-bold text-indigo-600 mb-4">403</div>
    <h1 class="text-2xl font-semibold text-zinc-800">Access Denied</h1>
    <p class="mt-2 text-zinc-600">
      Sorry, you donâ€™t have permission to access this page.<br>
      Please check your account or go back to the homepage.
    </p>

    <div class="mt-6 flex items-center justify-center gap-4">
      <a href="{{ path('app_home') }}"
         class="inline-flex items-center rounded-xl bg-indigo-600 px-4 py-2 text-white text-sm font-medium hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500">
        Go Home
      </a>
      {% if app.user %}
        <a href="{{ path('app_logout') }}"
           class="inline-flex items-center rounded-xl border border-zinc-300 px-4 py-2 text-sm font-medium text-zinc-700 hover:bg-zinc-50">
          Logout
        </a>
      {% else %}
        <a href="{{ path('app_login') }}"
           class="inline-flex items-center rounded-xl border border-zinc-300 px-4 py-2 text-sm font-medium text-zinc-700 hover:bg-zinc-50">
          Login
        </a>
      {% endif %}
    </div>
  </div>
</section>
{% endblock %}
