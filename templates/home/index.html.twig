{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<section class="container mx-auto px-4 py-10">
  <header class="mb-8">
    <h1 class="text-3xl font-bold tracking-tight">
      <span class="bg-gradient-to-r from-indigo-600 via-violet-600 to-fuchsia-600 bg-clip-text text-transparent">
        Toutes les recettes
      </span>
    </h1>
    <p class="mt-2 text-sm text-zinc-600">D√©couvrez les derni√®res id√©es √† cuisiner.</p>
  </header>

{% if recipes is not empty %}
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {% for recipe in recipes %}
      <article class="relative group rounded-2xl border border-zinc-200 bg-white shadow-sm hover:shadow-md hover:-translate-y-0.5 transition overflow-hidden cursor-pointer hover:scale-[1.01]">
      <a href="{{ path('app_recipe_show', { id: recipe.id }) }}"
           class=""
           aria-label="Voir la recette {{ recipe.title }}">
        {# Image (placeholder) #}
        <div class="h-40 w-full bg-gradient-to-br from-zinc-100 via-zinc-50 to-white flex items-center justify-center">
          <div class="text-zinc-400 text-sm">Image</div>
        </div>

        <div class="p-5 space-y-4">
          {% if recipe.category %}
            <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-medium bg-indigo-50 text-indigo-700">
              {{ recipe.category.name }}
            </span>
          {% endif %}

          <h3 class="text-xl font-semibold leading-tight group-hover:text-indigo-700 transition">
            {{ recipe.title }}
          </h3>

          <p class="text-sm text-zinc-600" style="-webkit-line-clamp:3;display:-webkit-box;-webkit-box-orient:vertical;overflow:hidden;">
            {{ recipe.description|default('Pas de description') }}
          </p>

          <div class="flex items-center justify-between text-xs text-zinc-500 pt-2">
            <div class="flex items-center gap-3">
              {% if recipe.prepTime %}
                <span class="inline-flex items-center gap-1">‚è±Ô∏è {{ recipe.prepTime }} min</span>
              {% endif %}
              {% if recipe.createdAt %}
                <span class="inline-flex items-center gap-1">üìÖ {{ recipe.createdAt|date('d/m/Y') }}</span>
              {% endif %}
            </div>

            {% set d = recipe.difficulty ?? 0 %}
            <div class="flex items-center">
              {% for i in 1..5 %}
                {% if i <= d %}<span class="text-amber-500">‚òÖ</span>{% else %}<span class="text-zinc-300">‚òÜ</span>{% endif %}
              {% endfor %}
            </div>
          </div>

          {# Lien Modifier au-dessus de l‚Äôoverlay (z-20) #}
          <div class="pt-1">
            <a href="{{ path('app_recipe_edit', { id: recipe.id }) }}"
               class="relative z-20 inline-flex items-center text-sm font-medium text-indigo-600 hover:text-indigo-700">
              Modifier
            </a>
          </div>
        </div>
      </a>
      </article>
    {% endfor %}
  </div>
{% else %}
  <div class="rounded-2xl border border-dashed border-zinc-300 p-10 text-center bg-white">
    <div class="text-2xl mb-2">üçΩÔ∏è</div>
    <h2 class="text-lg font-semibold">Aucune recette trouv√©e</h2>
    <p class="mt-1 text-sm text-zinc-600">Ajoutez-en une nouvelle pour commencer.</p>
  </div>
{% endif %}

</section>
{% endblock %}
