{% extends 'base.html.twig' %}

{% block title %}{{ user.username }}'s Profile{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-orange-50 via-white to-yellow-50 px-4 py-8">
    <div class="max-w-6xl mx-auto">
        <!-- Profile Header -->
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden mb-8">
            <div class="bg-gradient-to-r from-orange-500 to-yellow-500 h-32"></div>
            <div class="px-6 pb-6">
                <div class="flex flex-col md:flex-row md:items-end md:justify-between -mt-16 mb-6">
                    <div class="flex flex-col md:flex-row md:items-end md:gap-6">
                        <!-- Avatar -->
                        <div class="relative">
                            {% if user.avatarName %}
                                <img src="{{ vich_uploader_asset(user, 'avatarFile') }}" 
                                     alt="{{ user.username }}'s avatar" 
                                     class="w-32 h-32 rounded-full border-4 border-white shadow-lg object-cover">
                            {% else %}
                                <div class="w-32 h-32 rounded-full border-4 border-white shadow-lg bg-gradient-to-br from-orange-400 to-yellow-400 flex items-center justify-center">
                                    <span class="text-3xl font-bold text-white">
                                        {{ user.username|first|upper }}
                                    </span>
                                </div>
                            {% endif %}
                        </div>

                        <!-- User Info -->
                        <div class="mt-4 md:mt-0">
                            <h1 class="text-3xl font-bold text-gray-900">{{ user.username }}</h1>
                            <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600 mt-2">
                                {% if user.location %}
                                    <span class="flex items-center gap-1">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                        </svg>
                                        {{ user.location }}
                                    </span>
                                {% endif %}
                                {% if user.website %}
                                    <a href="{{ user.website }}" target="_blank" class="flex items-center gap-1 text-orange-600 hover:text-orange-700">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                                        </svg>
                                        Website
                                    </a>
                                {% endif %}
                                <span class="flex items-center gap-1">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                    </svg>
                                    Joined {{ user.joinedAt|date('F Y') }}
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Actions -->
                    {% if isOwnProfile %}
                        <div class="mt-4 md:mt-0">
                            <a href="{{ path('app_profile_edit') }}" 
                               class="inline-flex items-center gap-2 bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded-lg transition-colors">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                </svg>
                                Edit Profile
                            </a>
                        </div>
                    {% endif %}
                </div>

                <!-- Bio -->
                {% if user.bio %}
                    <div class="mb-6">
                        <p class="text-gray-700 leading-relaxed">{{ user.bio|nl2br }}</p>
                    </div>
                {% endif %}

                <!-- Stats -->
                <div class="grid grid-cols-3 gap-6 pt-6 border-t border-gray-200">
                    <div class="text-center">
                        <div class="text-2xl font-bold text-orange-600">{{ user.recipeCount }}</div>
                        <div class="text-sm text-gray-600">Recipe{{ user.recipeCount != 1 ? 's' : '' }}</div>
                    </div>
                    <div class="text-center">
                        <div class="text-2xl font-bold text-orange-600">{{ user.reviewCount }}</div>
                        <div class="text-sm text-gray-600">Review{{ user.reviewCount != 1 ? 's' : '' }}</div>
                    </div>
                    <div class="text-center">
                        <div class="text-2xl font-bold text-orange-600">
                            {% set totalRating = 0 %}
                            {% for recipe in user.recipes %}
                                {% if recipe.reviews|length > 0 %}
                                    {% for review in recipe.reviews %}
                                        {% set totalRating = totalRating + review.rating %}
                                    {% endfor %}
                                {% endif %}
                            {% endfor %}
                            {% if user.recipes|length > 0 and totalRating > 0 %}
                                {{ (totalRating / user.recipes|length)|number_format(1) }}‚òÖ
                            {% else %}
                                0‚òÖ
                            {% endif %}
                        </div>
                        <div class="text-sm text-gray-600">Avg Rating</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Content Tabs -->
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
            <div class="border-b border-gray-200">
                <nav class="flex">
                    <button class="tab-button active px-6 py-4 text-sm font-medium border-b-2 border-orange-500 text-orange-600" 
                            onclick="showTab('recipes')">
                        Recipes ({{ user.recipeCount }})
                    </button>
                    <button class="tab-button px-6 py-4 text-sm font-medium border-b-2 border-transparent text-gray-500 hover:text-gray-700" 
                            onclick="showTab('reviews')">
                        Reviews ({{ user.reviewCount }})
                    </button>
                </nav>
            </div>

            <!-- Recipes Tab -->
            <div id="recipes-tab" class="tab-content p-6">
                {% if user.recipes|length > 0 %}
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        {% for recipe in user.recipes %}
                            <div class="bg-gray-50 rounded-lg overflow-hidden hover:shadow-md transition-shadow">
                                {% if recipe.imageName %}
                                    <img src="{{ vich_uploader_asset(recipe, 'imageFile') }}" 
                                         alt="{{ recipe.title }}" 
                                         class="w-full h-48 object-cover">
                                {% else %}
                                    <div class="w-full h-48 bg-gradient-to-br from-orange-200 to-yellow-200 flex items-center justify-center">
                                        <span class="text-4xl">üçΩÔ∏è</span>
                                    </div>
                                {% endif %}
                                <div class="p-4">
                                    <h3 class="font-semibold text-gray-900 mb-2">
                                        <a href="{{ path('app_recipe_show', {id: recipe.id}) }}" 
                                           class="hover:text-orange-600 transition-colors">
                                            {{ recipe.title }}
                                        </a>
                                    </h3>
                                    <p class="text-sm text-gray-600 mb-2 line-clamp-2">
                                        {{ recipe.description|default('No description available.') }}
                                    </p>
                                    <div class="flex items-center justify-between text-xs text-gray-500">
                                        {% if recipe.prepTime %}
                                            <span>‚è±Ô∏è {{ recipe.prepTime }}min</span>
                                        {% endif %}
                                        <span>{{ recipe.createdAt|date('M j, Y') }}</span>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="text-center py-12">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                        </svg>
                        <h3 class="text-lg font-medium text-gray-900 mb-2">No recipes yet</h3>
                        <p class="text-gray-500 mb-4">
                            {% if isOwnProfile %}
                                Start sharing your culinary creations!
                            {% else %}
                                {{ user.username }} hasn't shared any recipes yet.
                            {% endif %}
                        </p>
                        {% if isOwnProfile %}
                            <a href="{{ path('app_recipe_new') }}" 
                               class="inline-flex items-center gap-2 bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded-lg transition-colors">
                                Create Your First Recipe
                            </a>
                        {% endif %}
                    </div>
                {% endif %}
            </div>

            <!-- Reviews Tab -->
            <div id="reviews-tab" class="tab-content p-6 hidden">
                {% if user.reviews|length > 0 %}
                    <div class="space-y-4">
                        {% for review in user.reviews %}
                            <div class="border border-gray-200 rounded-lg p-4">
                                <div class="flex items-start justify-between mb-2">
                                    <div>
                                        <h4 class="font-medium text-gray-900">
                                            <a href="{{ path('app_recipe_show', {id: review.recipe.id}) }}" 
                                               class="hover:text-orange-600 transition-colors">
                                                {{ review.recipe.title }}
                                            </a>
                                        </h4>
                                        <div class="flex items-center gap-2 mt-1">
                                            {{ star_rating(review.rating, 5, 'w-4 h-4') }}
                                            <span class="text-sm text-gray-500">{{ review.createdAt|date('M j, Y') }}</span>
                                        </div>
                                    </div>
                                </div>
                                {% if review.comment %}
                                    <p class="text-gray-700">{{ review.comment }}</p>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="text-center py-12">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-3.582 8-8 8a8.959 8.959 0 01-4.906-1.476L3 21l2.476-5.094A8.959 8.959 0 013 12c0-4.418 3.582-8 8-8s8 3.582 8 8z" />
                        </svg>
                        <h3 class="text-lg font-medium text-gray-900 mb-2">No reviews yet</h3>
                        <p class="text-gray-500">
                            {% if isOwnProfile %}
                                Start reviewing recipes to share your thoughts!
                            {% else %}
                                {{ user.username }} hasn't written any reviews yet.
                            {% endif %}
                        </p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function showTab(tabName) {
            // Hide all tab contents
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.add('hidden');
            });
            
            // Remove active class from all tab buttons
            document.querySelectorAll('.tab-button').forEach(button => {
                button.classList.remove('active', 'border-orange-500', 'text-orange-600');
                button.classList.add('border-transparent', 'text-gray-500');
            });
            
            // Show selected tab content
            document.getElementById(tabName + '-tab').classList.remove('hidden');
            
            // Add active class to clicked tab button
            event.target.classList.add('active', 'border-orange-500', 'text-orange-600');
            event.target.classList.remove('border-transparent', 'text-gray-500');
        }
    </script>
{% endblock %}