{% extends 'base.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-orange-50 via-white to-yellow-50 px-4 py-8">
    <div class="max-w-3xl mx-auto">
        <!-- Header - Mobile Optimized -->
        <div class="bg-white rounded-lg shadow-lg p-4 md:p-6 mb-4 md:mb-6">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 sm:gap-0">
                <div class="text-center sm:text-left">
                    <h1 class="text-2xl md:text-3xl font-bold text-gray-800">Edit Profile</h1>
                    <p class="text-gray-600 mt-2">Update your profile information and settings.</p>
                </div>
                <a href="{{ path('app_profile_my') }}" 
                   class="inline-flex items-center justify-center w-10 h-10 text-gray-600 hover:text-gray-800 transition-colors rounded-lg hover:bg-gray-50 touch-target">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </a>
            </div>
        </div>

        <!-- Profile Form -->
        <div class="bg-white rounded-lg shadow-lg p-6">
            {{ form_start(form, {'attr': {'enctype': 'multipart/form-data', 'class': 'space-y-6'}}) }}
                
                <!-- Current Avatar Display -->
                <div class="text-center">
                    <h3 class="text-lg font-medium text-gray-900 mb-4">Current Profile Picture</h3>
                    {% if user.avatarName %}
                        <img src="{{ vich_uploader_asset(user, 'avatarFile') }}" 
                             alt="Current avatar" 
                             class="w-32 h-32 rounded-full mx-auto object-cover border-4 border-gray-200 shadow-lg">
                    {% else %}
                        <div class="w-32 h-32 rounded-full mx-auto bg-gradient-to-br from-orange-400 to-yellow-400 flex items-center justify-center border-4 border-gray-200 shadow-lg">
                            <span class="text-3xl font-bold text-white">
                                {{ user.username|first|upper }}
                            </span>
                        </div>
                    {% endif %}
                </div>

                <!-- Avatar Upload -->
                <div>
                    {{ form_label(form.avatarFile, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                    {{ form_widget(form.avatarFile) }}
                    {% if form.avatarFile.vars.help %}
                        <p class="mt-1 text-sm text-gray-500">{{ form.avatarFile.vars.help }}</p>
                    {% endif %}
                    {{ form_errors(form.avatarFile) }}
                </div>

                <!-- Bio -->
                <div>
                    {{ form_label(form.bio, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                    {{ form_widget(form.bio) }}
                    {% if form.bio.vars.help %}
                        <p class="mt-1 text-sm text-gray-500">{{ form.bio.vars.help }}</p>
                    {% endif %}
                    {{ form_errors(form.bio) }}
                    <div class="mt-1 text-right">
                        <span class="text-xs text-gray-400" id="bio-counter">
                            <span id="bio-count">{{ form.bio.vars.value|length|default(0) }}</span>/1000 characters
                        </span>
                    </div>
                </div>

                <!-- Location -->
                <div>
                    {{ form_label(form.location, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                    {{ form_widget(form.location) }}
                    {{ form_errors(form.location) }}
                </div>

                <!-- Website -->
                <div>
                    {{ form_label(form.website, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                    {{ form_widget(form.website) }}
                    {{ form_errors(form.website) }}
                </div>

                <!-- Actions - Mobile Optimized -->
                <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 sm:gap-0 pt-6 border-t border-gray-200">
                    <a href="{{ path('app_profile_my') }}" 
                       class="w-full sm:w-auto inline-flex items-center justify-center gap-2 text-gray-600 hover:text-gray-800 font-medium transition-colors px-4 py-3 sm:py-2 rounded-lg hover:bg-gray-50 touch-target order-2 sm:order-1">
                        <i class="fas fa-arrow-left"></i>
                        <span>Cancel</span>
                    </a>
                    
                    <button type="submit" 
                            class="w-full sm:w-auto inline-flex items-center justify-center gap-2 bg-orange-500 hover:bg-orange-600 text-white font-medium px-6 py-4 sm:py-2 rounded-lg transition-colors shadow-sm hover:shadow-lg touch-target order-1 sm:order-2">
                        <i class="fas fa-save"></i>
                        <span>Save Changes</span>
                    </button>
                </div>

            {{ form_end(form) }}
        </div>

        <!-- Account Info -->
        <div class="bg-gray-50 rounded-lg p-6 mt-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Account Information</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
                <div>
                    <span class="font-medium text-gray-700">Username:</span>
                    <span class="text-gray-600">{{ user.username }}</span>
                </div>
                <div>
                    <span class="font-medium text-gray-700">Email:</span>
                    <span class="text-gray-600">{{ user.email }}</span>
                </div>
                <div>
                    <span class="font-medium text-gray-700">Member since:</span>
                    <span class="text-gray-600">{{ user.joinedAt|date('F j, Y') }}</span>
                </div>
                <div>
                    <span class="font-medium text-gray-700">Recipes shared:</span>
                    <span class="text-gray-600">{{ user.recipeCount }}</span>
                </div>
            </div>
            <p class="text-xs text-gray-500 mt-4">
                To change your username or email, please contact support.
            </p>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Bio character counter
        document.addEventListener('DOMContentLoaded', function() {
            const bioTextarea = document.querySelector('textarea[name*="[bio]"]');
            const bioCount = document.getElementById('bio-count');
            
            if (bioTextarea && bioCount) {
                bioTextarea.addEventListener('input', function() {
                    const currentLength = this.value.length;
                    bioCount.textContent = currentLength;
                    
                    // Change color when approaching limit
                    const counter = document.getElementById('bio-counter');
                    if (currentLength > 900) {
                        counter.classList.add('text-red-500');
                        counter.classList.remove('text-gray-400');
                    } else {
                        counter.classList.add('text-gray-400');
                        counter.classList.remove('text-red-500');
                    }
                });
            }
        });
    </script>
{% endblock %}