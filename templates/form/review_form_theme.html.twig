{% extends 'form_div_layout.html.twig' %}

{# Enhanced rating field styling for reviews with better validation and mobile optimization #}
{% block _review_rating_widget %}
    <div class="review-rating-widget" data-field-name="{{ full_name }}">
        <input type="hidden" name="{{ full_name }}" value="{{ value }}" class="rating-input">
        <div class="flex items-center justify-center sm:justify-start gap-2 mb-3">
            {% for i in 1..5 %}
                <button type="button" 
                        class="rating-star w-12 h-12 md:w-10 md:h-10 text-gray-300 hover:text-yellow-400 transition-all duration-200 transform hover:scale-110 focus:outline-none focus:ring-2 focus:ring-orange-300 rounded touch-target {{ value and i <= value ? 'text-yellow-400' : '' }}" 
                        data-rating="{{ i }}"
                        title="Give {{ i }} star{{ i != 1 ? 's' : '' }}"
                        aria-label="Rate {{ i }} star{{ i != 1 ? 's' : '' }}">
                    <svg fill="currentColor" viewBox="0 0 20 20" class="drop-shadow-sm">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                </button>
            {% endfor %}
        </div>
        <div class="rating-feedback text-center sm:text-left">
            <div class="text-sm font-medium text-gray-700 rating-label transition-all duration-200">
                {% if value %}
                    <span class="flex flex-col sm:flex-row sm:items-center gap-1 sm:gap-2">
                        <span class="flex items-center justify-center sm:justify-start gap-2">
                            <i class="fas fa-check-circle text-green-500"></i>
                            {{ value }} star{{ value != 1 ? 's' : '' }} - 
                            {% if value == 1 %}
                                <span class="text-red-600">Poor</span>
                            {% elseif value == 2 %}
                                <span class="text-orange-600">Fair</span>
                            {% elseif value == 3 %}
                                <span class="text-yellow-600">Good</span>
                            {% elseif value == 4 %}
                                <span class="text-blue-600">Very Good</span>
                            {% else %}
                                <span class="text-green-600">Excellent</span>
                            {% endif %}
                        </span>
                    </span>
                {% else %}
                    <span class="text-gray-500 flex flex-col sm:flex-row sm:items-center gap-1 sm:gap-2">
                        <span class="flex items-center justify-center sm:justify-start gap-2">
                            <i class="fas fa-touch"></i>
                            Tap stars to rate this recipe
                        </span>
                    </span>
                {% endif %}
            </div>
            <div class="text-xs text-gray-500 mt-2 rating-description opacity-0 transition-opacity duration-200 text-center sm:text-left">
                <span class="description-text"></span>
            </div>
        </div>
    </div>
{% endblock %}

{# Enhanced comment field styling with validation and mobile optimization #}
{% block _review_comment_widget %}
    <div class="comment-widget">
        <div class="relative">
            <textarea {{ block('widget_attributes') }} 
                      placeholder="{{ attr.placeholder|default('Share your cooking experience... What did you like? Any tips or modifications?') }}" 
                      class="w-full px-4 py-4 md:py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 resize-none transition-all duration-200 hover:border-gray-400 text-base md:text-sm touch-target min-h-[120px] md:min-h-[100px]">{{ value }}</textarea>
            <div class="absolute bottom-3 right-3 text-xs text-gray-400 pointer-events-none">
                <i class="fas fa-comment-dots"></i>
            </div>
        </div>
        
        <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-2 sm:gap-0 mt-3">
            <div class="text-xs text-gray-500 flex items-center gap-1 order-2 sm:order-1">
                <i class="fas fa-lightbulb text-yellow-500"></i>
                <span class="helpful-tip">Share your cooking experience, tips, or modifications</span>
            </div>
            <div class="text-xs text-gray-400 font-mono order-1 sm:order-2 text-center sm:text-right" id="comment-counter">
                <span id="comment-count">{{ value|length|default(0) }}</span>/1000
            </div>
        </div>
        
        {# Validation hints #}
        <div class="validation-hints mt-2 space-y-1">
            <div class="text-xs text-gray-400 validation-hint opacity-0 transition-opacity duration-200 text-center sm:text-left" id="length-hint">
                <i class="fas fa-info-circle"></i>
                <span class="hint-text"></span>
            </div>
        </div>
    </div>
{% endblock %}

{# Enhanced form row styling with better spacing #}
{% block form_row %}
    <div class="form-group mb-6 {{ errors|length > 0 ? 'has-error' : '' }}">
        {% if label is not same as(false) %}
            <div class="mb-3">
                {{ form_label(form, label, {
                    'label_attr': {
                        'class': 'block text-sm font-semibold text-gray-800 mb-2 flex items-center gap-2' ~ (required ? ' required' : '')
                    }
                }) }}
                {% if required %}
                    <span class="text-red-500 text-sm ml-1">*</span>
                {% endif %}
            </div>
        {% endif %}
        {{ form_widget(form) }}
        {{ form_errors(form) }}
        
        {# Field-specific help text #}
        {% if form.vars.name == 'rating' %}
            <div class="mt-2 text-xs text-gray-500 flex items-center gap-1">
                <i class="fas fa-info-circle"></i>
                Your rating helps other cooks understand the recipe quality
            </div>
        {% elseif form.vars.name == 'comment' %}
            <div class="mt-2 text-xs text-gray-500 flex items-center gap-1">
                <i class="fas fa-info-circle"></i>
                Optional: Share details about taste, difficulty, modifications, or cooking tips
            </div>
        {% endif %}
    </div>
{% endblock %}

{# Enhanced error styling with better UX #}
{% block form_errors %}
    {% if errors|length > 0 %}
        <div class="mt-3 space-y-2">
            {% for error in errors %}
                <div class="flex items-start gap-3 text-sm text-red-600 bg-red-50 border border-red-200 rounded-lg px-4 py-3 animate-fade-in">
                    <div class="flex-shrink-0 mt-0.5">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                        </svg>
                    </div>
                    <div class="flex-1">
                        <span class="font-medium">{{ error.message }}</span>
                        {# Add specific suggestions based on field #}
                        {% if form.vars.name == 'rating' %}
                            <div class="text-xs text-red-500 mt-1">Please select a star rating from 1 to 5</div>
                        {% elseif form.vars.name == 'comment' and 'length' in error.message|lower %}
                            <div class="text-xs text-red-500 mt-1">Consider shortening your comment or breaking it into key points</div>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}

{# Enhanced submit button - mobile optimized #}
{% block submit_widget %}
    <button type="{{ type|default('submit') }}" {{ block('button_attributes') }}
            class="{{ attr.class|default('w-full sm:w-auto bg-gradient-to-r from-orange-500 to-red-500 hover:from-orange-600 hover:to-red-600 disabled:from-gray-400 disabled:to-gray-500 text-white font-medium py-4 sm:py-3 px-8 rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 disabled:transform-none disabled:shadow-none focus:outline-none focus:ring-2 focus:ring-orange-300 disabled:cursor-not-allowed touch-target') }}">
        <span class="button-text flex items-center justify-center gap-2">
            <span>{{ label }}</span>
            <i class="fas fa-paper-plane"></i>
        </span>
    </button>
{% endblock %}