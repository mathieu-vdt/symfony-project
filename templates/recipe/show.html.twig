{% extends 'base.html.twig' %}
{% block title %}{{ recipe.title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
<section class="container mx-auto px-4 py-10">
  {# Navigation Breadcrumb - Mobile Optimized #}
  <nav class="mb-6 md:mb-8" aria-label="Breadcrumb">
    <div class="flex flex-col sm:flex-row sm:items-center gap-3 text-sm">
      <a href="{{ path('app_home') }}" 
         class="w-full sm:w-auto inline-flex items-center justify-center sm:justify-start gap-2 text-zinc-600 hover:text-zinc-900 transition-colors px-4 py-3 sm:py-2 rounded-lg hover:bg-zinc-50 touch-target">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        <span>Back to Recipes</span>
      </a>
      
      {% if is_granted('RECIPE_EDIT', recipe) %}
        <span class="text-zinc-300 hidden sm:inline">•</span>
        <a href="{{ path('app_recipe_edit', { id: recipe.id }) }}" 
           class="w-full sm:w-auto inline-flex items-center justify-center sm:justify-start gap-2 text-indigo-600 hover:text-indigo-700 transition-colors px-4 py-3 sm:py-2 rounded-lg hover:bg-indigo-50 touch-target">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
          <span>Edit Recipe</span>
        </a>
      {% endif %}
    </div>
  </nav>

  {# Recipe Header #}
  <header class="mb-10">
    <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-6">
      <div class="flex-1">
        <h1 class="text-4xl font-bold text-zinc-900 mb-4">{{ recipe.title }}</h1>
        
        {# Recipe meta information #}
        <div class="flex flex-wrap items-center gap-4 text-sm">
          {% if recipe.category %}
            <span class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
              </svg>
              {{ recipe.category.name }}
            </span>
          {% endif %}

          {% if recipe.prepTime %}
            <span class="inline-flex items-center gap-2 text-zinc-600">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              {{ recipe.prepTime }} minutes
            </span>
          {% endif %}

          {% if recipe.createdAt %}
            <span class="inline-flex items-center gap-2 text-zinc-600">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              {{ recipe.createdAt|date('F j, Y') }}
            </span>
          {% endif %}

          {% if recipe.author %}
            <span class="inline-flex items-center gap-2 text-zinc-600">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              by <a href="{{ path('app_profile_show', {'username': recipe.author.username}) }}" 
                    class="text-orange-600 hover:text-orange-700 font-medium transition-colors">
                {{ recipe.author.username }}
              </a>
            </span>
          {% endif %}
        </div>

        {# Difficulty rating #}
        {% set d = recipe.difficulty ?? 0 %}
        {% if d > 0 %}
          <div class="mt-4 flex items-center gap-2">
            <span class="text-sm font-medium text-zinc-700">Difficulty:</span>
            <div class="flex items-center">
              {% for i in 1..5 %}
                {% if i <= d %}
                  <svg class="w-5 h-5 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                {% else %}
                  <svg class="w-5 h-5 text-zinc-300" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                {% endif %}
              {% endfor %}
              <span class="ml-2 text-sm text-zinc-600">({{ d }}/5)</span>
            </div>
          </div>
        {% endif %}

        {# Recipe Rating #}
        {% if averageRating > 0 %}
          <div class="mt-4 flex items-center gap-2">
            <span class="text-sm font-medium text-zinc-700">Rating:</span>
            <div class="flex items-center gap-2">
              {{ star_rating(averageRating) }}
              <span class="text-sm text-zinc-600">
                {{ averageRating|number_format(1) }}/5 ({{ reviewCount }} review{{ reviewCount != 1 ? 's' : '' }})
              </span>
            </div>
          </div>
        {% endif %}
      </div>

      {# Recipe Image #}
      {% if recipe.imageName %}
        <div class="lg:w-80">
          <img src="{{ vich_uploader_asset(recipe, 'imageFile') }}"
               alt="{{ recipe.title }}"
               class="w-full h-64 lg:h-80 object-cover rounded-2xl shadow-lg">
        </div>
      {% endif %}
    </div>
  </header>

  {# Recipe Content #}
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    {# Main Content - Instructions #}
    <article class="lg:col-span-2">
      <div class="bg-white rounded-2xl border border-zinc-200 shadow-sm overflow-hidden">
        <div class="px-6 py-5 border-b border-zinc-200 bg-zinc-50">
          <h2 class="text-xl font-semibold text-zinc-900 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            Instructions
          </h2>
        </div>
        <div class="px-6 py-6">
          <div class="prose prose-zinc max-w-none">
            {{ recipe.instructions|nl2br }}
          </div>
        </div>
      </div>
    </article>

    {# Sidebar - Recipe Details #}
    <aside class="space-y-6">
      {# Description Card #}
      {% if recipe.description %}
        <div class="bg-white rounded-2xl border border-zinc-200 shadow-sm overflow-hidden">
          <div class="px-6 py-4 border-b border-zinc-200 bg-zinc-50">
            <h3 class="font-semibold text-zinc-900 flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              About This Recipe
            </h3>
          </div>
          <div class="px-6 py-4">
            <p class="text-sm text-zinc-700 leading-relaxed">{{ recipe.description }}</p>
          </div>
        </div>
      {% endif %}

      {# Ingredients Card #}
      <div class="bg-white rounded-2xl border border-zinc-200 shadow-sm overflow-hidden">
        <div class="px-6 py-4 border-b border-zinc-200 bg-zinc-50">
          <h3 class="font-semibold text-zinc-900 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            Ingredients
            {% if recipe.ingredients is not empty %}
              <span class="ml-auto text-xs font-normal bg-indigo-100 text-indigo-800 px-2 py-1 rounded-full">
                {{ recipe.ingredients|length }}
              </span>
            {% endif %}
          </h3>
        </div>
        <div class="px-6 py-4">
          {% if recipe.ingredients is not empty %}
            <ul class="space-y-3">
              {% for ingredient in recipe.ingredients %}
                <li class="flex items-start gap-3">
                  <span class="flex-shrink-0 w-2 h-2 bg-indigo-400 rounded-full mt-2"></span>
                  <div class="flex-1 min-w-0">
                    <span class="text-sm font-medium text-zinc-900">{{ ingredient.name }}</span>
                    {% if ingredient.unit %}
                      <span class="text-xs text-zinc-500 ml-1">({{ ingredient.unit }})</span>
                    {% endif %}
                  </div>
                </li>
              {% endfor %}
            </ul>
          {% else %}
            <div class="text-center py-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-zinc-300 mx-auto mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
              </svg>
              <p class="text-sm text-zinc-500">No ingredients listed</p>
            </div>
          {% endif %}
        </div>
      </div>
    </aside>
  </div>

  {# Reviews Section - Mobile Optimized #}
  <section class="mt-8 md:mt-12">
    <div class="bg-white rounded-2xl border border-zinc-200 shadow-sm overflow-hidden">
      <div class="px-4 md:px-6 py-4 md:py-5 border-b border-zinc-200 bg-zinc-50">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
          <h2 class="text-lg md:text-xl font-semibold text-zinc-900 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-3.582 8-8 8a8.959 8.959 0 01-4.906-1.476L3 21l2.476-5.094A8.959 8.959 0 013 12c0-4.418 3.582-8 8-8s8 3.582 8 8z" />
            </svg>
            Reviews
            {% if reviewCount > 0 %}
              <span class="text-xs font-normal bg-indigo-100 text-indigo-800 px-2 py-1 rounded-full">
                {{ reviewCount }}
              </span>
            {% endif %}
          </h2>
          
          {# Review Action Button - Mobile Optimized #}
          {% if app.user and recipe.author != app.user %}
            {% if userReview %}
              <div class="flex flex-col sm:flex-row items-stretch sm:items-center gap-2">
                <a href="{{ path('app_review_edit', {id: userReview.id}) }}" 
                   class="flex items-center justify-center gap-2 text-sm bg-blue-100 hover:bg-blue-200 text-blue-700 px-4 py-3 rounded-lg transition-all duration-200 shadow-sm hover:shadow-md touch-target">
                  <i class="fas fa-edit"></i>
                  <span>Edit Review</span>
                </a>
                <form method="post" action="{{ path('app_review_delete', {id: userReview.id}) }}" class="w-full sm:w-auto">
                  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ userReview.id) }}">
                  <button type="submit" 
                          onclick="return confirm('Are you sure you want to delete your review?')"
                          class="w-full flex items-center justify-center gap-2 text-sm bg-red-100 hover:bg-red-200 text-red-700 px-4 py-3 rounded-lg transition-all duration-200 shadow-sm hover:shadow-md touch-target">
                    <i class="fas fa-trash-alt"></i>
                    <span>Delete Review</span>
                  </button>
                </form>
              </div>
            {% else %}
              <a href="{{ path('app_review_new', {id: recipe.id}) }}" 
                 class="flex items-center justify-center gap-2 text-sm bg-gradient-to-r from-orange-500 to-red-500 hover:from-orange-600 hover:to-red-600 text-white px-4 py-3 rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 touch-target">
                <i class="fas fa-plus"></i>
                <span>Write Review</span>
              </a>
            {% endif %}
          {% elseif not app.user %}
            <a href="{{ path('app_login') }}" 
               class="flex items-center justify-center gap-2 text-sm bg-gray-600 hover:bg-gray-700 text-white px-4 py-3 rounded-lg transition-colors touch-target">
              <i class="fas fa-sign-in-alt"></i>
              <span>Login to Review</span>
            </a>
          {% endif %}
        </div>
      </div>
      
      <div class="px-4 md:px-6 py-4 md:py-6">
        {% if reviews is not empty %}
          <div class="space-y-4 md:space-y-6">
            {% for review in reviews %}
              <div class="bg-gradient-to-br from-white to-gray-50 border border-gray-200 hover:border-orange-300 rounded-xl p-4 md:p-6 transition-all duration-200 hover:shadow-md">
                <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-3 mb-3 md:mb-4">
                  <div class="flex items-center gap-3 md:gap-4">
                    <!-- Enhanced Avatar - Mobile Optimized -->
                    <div class="relative flex-shrink-0">
                      <div class="w-10 md:w-12 h-10 md:h-12 bg-gradient-to-br from-orange-400 to-red-500 rounded-full flex items-center justify-center shadow-lg">
                        <span class="text-white font-bold text-sm md:text-lg">
                          {{ review.author.name|first|upper }}
                        </span>
                      </div>
                      <!-- Online indicator -->
                      <div class="absolute -bottom-0.5 md:-bottom-1 -right-0.5 md:-right-1 w-3 md:w-4 h-3 md:h-4 bg-green-400 border-2 border-white rounded-full"></div>
                    </div>
                    
                    <div class="flex-1 min-w-0">
                      <h4 class="font-semibold text-gray-900 flex flex-wrap items-center gap-2 text-sm md:text-base">
                        <a href="{{ path('app_profile_show', {'username': review.author.username}) }}" 
                           class="hover:text-orange-600 transition-colors truncate">
                          {{ review.author.name }}
                        </a>
                        {% if review.author == recipe.author %}
                          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 whitespace-nowrap">
                            <i class="fas fa-crown mr-1"></i>Author
                          </span>
                        {% endif %}
                      </h4>
                      
                      <!-- Enhanced Rating Display - Mobile Optimized -->
                      <div class="flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-3 mt-1">
                        <div class="flex items-center gap-1">
                          {% for i in 1..5 %}
                            {% if i <= review.rating %}
                              <i class="fas fa-star text-yellow-400 text-sm"></i>
                            {% else %}
                              <i class="far fa-star text-gray-300 text-sm"></i>
                            {% endif %}
                          {% endfor %}
                          <span class="text-sm font-medium text-gray-700 ml-1">{{ review.rating }}/5</span>
                        </div>
                        
                        <span class="text-gray-300 hidden sm:inline">•</span>
                        
                        <div class="flex items-center gap-1 text-xs md:text-sm text-gray-500">
                          <i class="far fa-calendar-alt"></i>
                          <span>{{ review.createdAt|date('M j, Y') }}</span>
                          {% if review.updatedAt > review.createdAt %}
                            <span class="text-orange-500 font-medium">(edited)</span>
                          {% endif %}
                        </div>
                      </div>
                    </div>
                  </div>
                  
                  <!-- Review Actions - Mobile Optimized -->
                  {% if app.user and review.author == app.user %}
                    <div class="flex sm:flex-col items-center gap-2 self-end sm:self-start">
                      <a href="{{ path('app_review_edit', {id: review.id}) }}" 
                         class="text-gray-400 hover:text-blue-500 transition-colors p-2 rounded-lg hover:bg-blue-50 touch-target"
                         title="Edit review">
                        <i class="fas fa-edit"></i>
                      </a>
                      <form method="post" action="{{ path('app_review_delete', {id: review.id}) }}" class="inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ review.id) }}">
                        <button type="submit" 
                                onclick="return confirm('Are you sure you want to delete your review?')"
                                class="text-gray-400 hover:text-red-500 transition-colors p-2 rounded-lg hover:bg-red-50 touch-target"
                                title="Delete review">
                          <i class="fas fa-trash-alt"></i>
                        </button>
                      </form>
                    </div>
                  {% endif %}
                </div>
                
                {% if review.comment %}
                  <div class="relative mb-3 md:mb-4">
                    <div class="absolute left-0 top-0 w-1 h-full bg-gradient-to-b from-orange-400 to-red-500 rounded-full"></div>
                    <div class="pl-4">
                      <p class="text-gray-700 leading-relaxed italic text-sm md:text-base">
                        "{{ review.comment }}"
                      </p>
                    </div>
                  </div>
                {% else %}
                  <div class="text-gray-500 italic text-sm mb-3 md:mb-4">
                    <i class="fas fa-quote-left mr-1"></i>
                    No comment provided, just a rating.
                  </div>
                {% endif %}
                
                <!-- Review Metrics - Mobile Optimized -->
                <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 pt-3 md:pt-4 border-t border-gray-100">
                  <div class="flex items-center gap-4 text-sm text-gray-500">
                    <button class="flex items-center gap-1 hover:text-orange-500 transition-colors p-1 touch-target">
                      <i class="far fa-thumbs-up"></i>
                      <span>Helpful</span>
                    </button>
                    <button class="flex items-center gap-1 hover:text-orange-500 transition-colors p-1 touch-target">
                      <i class="far fa-flag"></i>
                      <span>Report</span>
                    </button>
                  </div>
                  
                  <!-- Rating Badge -->
                  <div class="flex items-center gap-2">
                    {% if review.rating >= 4 %}
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        <i class="fas fa-thumbs-up mr-1"></i>Positive
                      </span>
                    {% elseif review.rating == 3 %}
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                        <i class="fas fa-meh mr-1"></i>Neutral
                      </span>
                    {% else %}
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                        <i class="fas fa-thumbs-down mr-1"></i>Critical
                      </span>
                    {% endif %}
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
        {% else %}
          <div class="text-center py-8 md:py-12">
            <div class="relative">
              <div class="w-20 md:w-24 h-20 md:h-24 bg-gradient-to-br from-orange-100 to-red-100 rounded-full flex items-center justify-center mx-auto mb-4 md:mb-6">
                <i class="fas fa-comments text-3xl md:text-4xl text-orange-400"></i>
              </div>
              <!-- Floating elements -->
              <div class="absolute top-0 left-1/2 transform -translate-x-6 md:-translate-x-8 -translate-y-1 md:-translate-y-2">
                <i class="fas fa-star text-yellow-300 text-base md:text-lg opacity-50"></i>
              </div>
              <div class="absolute top-3 md:top-4 right-1/2 transform translate-x-6 md:translate-x-8">
                <i class="fas fa-heart text-red-300 text-sm opacity-50"></i>
              </div>
            </div>
            
            <h3 class="text-lg md:text-xl font-semibold text-gray-900 mb-2">No reviews yet</h3>
            <p class="text-gray-500 mb-4 md:mb-6 max-w-md mx-auto text-sm md:text-base px-4">
              Be the first to share your experience with this recipe! Your feedback helps other home cooks decide if this recipe is right for them.
            </p>
            
            {% if app.user and recipe.author != app.user %}
              <a href="{{ path('app_review_new', {id: recipe.id}) }}" 
                 class="inline-flex items-center gap-2 bg-gradient-to-r from-orange-500 to-red-500 hover:from-orange-600 hover:to-red-600 text-white font-medium px-6 py-3 rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 touch-target">
                <i class="fas fa-plus"></i>
                <span>Write the first review</span>
              </a>
            {% elseif not app.user %}
              <a href="{{ path('app_login') }}" 
                 class="inline-flex items-center gap-2 bg-gray-600 hover:bg-gray-700 text-white font-medium px-6 py-3 rounded-lg transition-colors touch-target">
                <i class="fas fa-sign-in-alt"></i>
                <span>Login to write a review</span>
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </section>
</section>
{% endblock %}
