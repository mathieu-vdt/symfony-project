{% extends 'base.html.twig' %}
{% block title %}{{ recipe.title }}{% endblock %}

{% block body %}
<section class="container mx-auto px-4 py-10">
  <div class="mb-6 flex items-center gap-3">
    <a href="{{ path('app_home') }}" class="text-sm text-zinc-600 hover:text-zinc-900">&larr; Retour</a>
    <span class="text-zinc-300">‚Ä¢</span>
    <a href="{{ path('app_recipe_edit', { id: recipe.id }) }}" class="text-sm text-indigo-600 hover:text-indigo-700">Modifier</a>
  </div>

  <header class="mb-6">
    <h1 class="text-3xl font-bold tracking-tight">{{ recipe.title }}</h1>
    <div class="mt-2 flex flex-wrap items-center gap-3 text-sm text-zinc-600">
      {% if recipe.category %}
        <span class="inline-flex items-center px-2.5 py-1 rounded-full bg-indigo-50 text-indigo-700">
          {{ recipe.category.name }}
        </span>
      {% endif %}

      {% if recipe.prepTime %}
        <span class="inline-flex items-center gap-1">‚è±Ô∏è {{ recipe.prepTime }} min</span>
      {% endif %}

      {% if recipe.createdAt %}
        <span class="inline-flex items-center gap-1">üìÖ {{ recipe.createdAt|date('d/m/Y') }}</span>
      {% endif %}

      {% set d = recipe.difficulty ?? 0 %}
      <span class="inline-flex items-center gap-1">
        {% for i in 1..5 %}
          {% if i <= d %}<span class="text-amber-500">‚òÖ</span>{% else %}<span class="text-zinc-300">‚òÜ</span>{% endif %}
        {% endfor %}
      </span>
    </div>
  </header>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    {# Colonne principale #}
    <article class="lg:col-span-2 rounded-2xl border border-zinc-200 bg-white p-6 shadow-sm">
      <h2 class="text-lg font-semibold mb-3">Instructions</h2>
      <div class="prose max-w-none">
        {{ recipe.instructions|nl2br }}
      </div>
    </article>

    {# Sidebar #}
    <aside class="rounded-2xl border border-zinc-200 bg-white p-6 shadow-sm space-y-6">
      {% if recipe.description %}
        <div>
          <h3 class="text-sm font-semibold text-zinc-700 mb-2">Description</h3>
          <p class="text-sm text-zinc-600">{{ recipe.description }}</p>
        </div>
      {% endif %}

      <div>
        <h3 class="text-sm font-semibold text-zinc-700 mb-2">Ingr√©dients</h3>
        {% if recipe.ingredients is not empty %}
          <ul class="space-y-1 text-sm text-zinc-700">
            {% for ing in recipe.ingredients %}
              <li class="flex items-center gap-2">
                <span class="h-1.5 w-1.5 rounded-full bg-zinc-400"></span>
                <span>{{ ing.name }}{% if ing.unit %} <span class="text-zinc-400">({{ ing.unit }})</span>{% endif %}</span>
              </li>
            {% endfor %}
          </ul>
        {% else %}
          <p class="text-sm text-zinc-500">Aucun ingr√©dient li√©.</p>
        {% endif %}
      </div>
    </aside>
  </div>
</section>
{% endblock %}
